[project]
name = "{{ project_name }}"
version = "0.1.0"
description = "Production-grade AI microservice forged by SOLA"
readme = "README.md"
requires-python = ">=3.10"
dependencies = [
    "fastapi>=0.112.0",
    "uvicorn>=0.27.0",
    "openai>=1.40.0",
    "pydantic>=2.6.0",
    "python-dotenv>=1.0.0",
    "structlog>=24.0.0",
]

[dependency-groups]
dev = [
    "pytest>=8.0.0",
    "pytest-asyncio>=0.23.0",
    "deepeval>=0.20.0",
    "ruff>=0.3.0",
    "httpx>=0.27.0",
    "pre-commit>=3.6.0",
]

[tool.uv]
package = false

[tool.ruff]
line-length = 88
target-version = "py310"
lint.select = ["E", "F", "I", "B", "UP"]

[tool.ruff.lint.isort]
known-first-party = ["app"]

[tool.pytest.ini_options]
pythonpath = ["."]
testpaths = ["tests"]
asyncio_mode = "auto"
